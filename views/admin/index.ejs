<!-- views/admin/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body>
    <header>
      <h1><%= title %></h1>
      <!-- Add any additional header content or navigation links -->
    </header>

    <nav>
      <ul>
        <li><a href="/admin">Dashboard</a></li>
        <li><a href="/admin/users">Users</a></li>
        <!-- Add more links as needed -->
      </ul>
    </nav>

    <main>
      <section>
        <h2>Welcome to the Admin Dashboard</h2>
        <p>This is the main admin dashboard content.</p>
      </section>
    </main>

    <!-- Form for updating user profile -->
    <form action="/admin/update-profile" method="post">
      <!-- Add input fields for the user profile data -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= user.name %>" />

      <!-- Add more input fields for other profile data -->

      <button type="submit">Update Profile</button>
    </form>

    <footer>
      <!-- Footer content, if any -->
    </footer>

    <script src="/js/main.js"></script>
  </body>
</html>
