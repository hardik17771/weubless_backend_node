<style>
    #save-text{
      color:#fff;
    }
    #update-save-button {
    display: block;
    margin: 0 auto;
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }
  .custom-modal {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 20px;
    background-color: white;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    text-align: center;
    opacity: 0; /* Start with opacity 0 */
    transition: opacity 1s ease-in-out; /* Add transition */
  }

  .custom-modal p {
    margin-bottom: 15px;
  }

  .custom-modal button {
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0; /* Start with opacity 0 */
    transition: opacity 3s ease-in-out; /* Add transition */
  }

    /* Add class to show elements */
    .show-modal {
    display: block;
    opacity: 1;
    }
</style>

<ul class="list-group detail-page">
  <li class="list-group-item border-0 w-full  p-4 mb-2 bg-gray-100 border-radius-lg">
    <form action="/admin/detail/<%= product.product_id %>" method="POST">
      <div class="d-flex flex-column">
        <h6 class="mb-3 text-sm">Product Details</h6>
        
        <% Object.entries(product.toObject()).forEach(([key, value]) => { %>
          <div class="mb-2 text-xs">
            <label for="<%= key %>"><%= key %>:</label>
            <input type="text" class="w-full p-1" id="<%= key %>" name="<%= key %>" value="<%= value %>" style="width: calc(100% - 10rem);">
          </div>
          <% }); %>
        </div>
      <div class="ms-auto text-end">
        <button type="submit" class="btn btn-link text-dark px-3 mb-0" id = "update-save-button">
          <i class="fas fa-save text-light me-2" aria-hidden="true" ></i><span id="save-text"> Save</span>
        </button>
      </div>
    </form>
  </li>
</ul>


